{
	"name": "clappybot",
	"version": "1.0.0",
	"description": "bot that posts clips posted to twitch chat to discord",
	"license": "ISC",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"test": "echo \"Error: no test specified\" && exit 1",
		"precommit": "lint-staged"
	},
	"dependencies": {
		"apollo-server-koa": "^1.3.2",
		"camelcase": "^4.1.0",
		"dotenv": "^5.0.0",
		"graphql": "^0.12.3",
		"graphql-tools": "^2.19.0",
		"koa": "^2.4.1",
		"koa-bodyparser": "^4.2.0",
		"koa-router": "^7.4.0",
		"lodash": "^4.17.5",
		"lowdb": "^1.0.0",
		"request-promise": "^4.2.2",
		"tmi.js": "^1.2.1",
		"urijs": "^1.19.0",
		"winston": "^3.0.0-rc1"
	},
	"devDependencies": {
		"eslint": "^4.17.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-prettier": "^2.6.0",
		"husky": "^0.14.3",
		"lint-staged": "^6.1.0",
		"prettier": "^1.10.2",
		"prettier-eslint": "^8.8.1"
	},
	"lint-staged": {
		"**/*.js": [
			"prettier --write --single-quote --trailing-comma all",
			"git add"
		],
		"**/*.json": [
			"prettier --write --parser json",
			"git add"
		],
		"**/*.md": [
			"prettier --write --parser markdown",
			"git add"
		],
		"**/*.graphql": [
			"prettier --write --parser graphql",
			"git add"
		]
	}
}
